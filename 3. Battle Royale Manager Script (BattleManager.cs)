using UnityEngine;
using UnityEngine.UI;

public class BattleManager : MonoBehaviour
{
    public float shrinkRate = 0.99f;
    public float minSize = 5f;
    public Text timerText;
    private float currentSize = 100f; // Initial size of the battle arena

    void Start()
    {
        // Optionally start a countdown timer
        StartCoroutine(ShrinkArena());
    }

    void Update()
    {
        // Update the timer UI (e.g., countdown or match time)
        int minutes = Mathf.FloorToInt(Time.time / 60f);
        int seconds = Mathf.FloorToInt(Time.time % 60f);
        timerText.text = string.Format("{0:00}:{1:00}", minutes, seconds);
    }

    IEnumerator ShrinkArena()
    {
        while (currentSize > minSize)
        {
            yield return new WaitForSeconds(1f);
            currentSize *= shrinkRate; // Shrink the arena size
            UpdateArenaSize(); // Update the visual representation
        }
    }

    void UpdateArenaSize()
    {
        // Adjust camera or arena visuals based on currentSize
    }
}
